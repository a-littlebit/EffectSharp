<Window x:Class="Example.Wpf.Counter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example.Wpf.Counter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="A counter with throttling who always tries to restore itself" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding DisplayCount}" FontSize="20" HorizontalAlignment="Center" Margin="20" />
            <Button Content="Increment" Command="{Binding IncrementCommand}" CommandParameter="{Binding IncrementStep}" HorizontalAlignment="Stretch" Padding="10" />
        </StackPanel>
    </Grid>
</Window>
